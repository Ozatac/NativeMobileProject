<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ozatactunahan.nativemobileapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_product_detail"
            app:destination="@id/navigation_product_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.ozatactunahan.nativemobileapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.ozatactunahan.nativemobileapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ozatactunahan.nativemobileapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_product_detail"
        android:name="com.ozatactunahan.nativemobileapp.ui.productdetail.ProductDetailFragment"
        android:label="Ürün Detayı"
        tools:layout="@layout/fragment_product_detail">
        
        <argument
            android:name="product"
            app:argType="com.ozatactunahan.nativemobileapp.data.model.Product" />
        <action
            android:id="@+id/action_navigation_product_detail_to_navigation_home"
            app:destination="@id/navigation_home" />

    </fragment>
</navigation>